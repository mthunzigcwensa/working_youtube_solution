@using youtube.Domain.ViewModels
@model RegisterVM
<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

<div class="register-container">
    <h2>Create Your Account</h2>
    <p class="subheading">Join us today to get started</p>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter your phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-login">Register</button>
        <span asp-validation-summary="ModelOnly" class="text-danger"></span>
    </form>
    <hr />
    <p class="text-center">Already have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}