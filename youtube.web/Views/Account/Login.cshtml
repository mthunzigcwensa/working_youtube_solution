@using youtube.Domain.ViewModels
@model LoginVM
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<div class="login-container">
   
   
    <form asp-action="Login" method="post">
        <h2>Login</h2>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" id="email" placeholder="Enter your email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter your password">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
        </div>
        <button type="submit" class="btn btn-login">Login</button>
        <p class="text-center">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign Up</a></p>
    </form>
    <hr />
    
</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}