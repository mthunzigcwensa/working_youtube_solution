@using youtube.Domain.ViewModels
@model LoginVM
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<div class="login-container">
    <form asp-action="Login" method="post">
        <h2>Sign In</h2>
       
        <div class="form-group">
            <label asp-for="Email">Username</label>
            <input type="text" asp-for="Email" placeholder="Enter your username" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" asp-for="Password" placeholder="Enter your password" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
       
        <button type="submit">Login</button>
        <span class="text-danger" id="error-message" style="display: none;">Invalid username or password</span>
        <hr />
        <a asp-controller="Account" asp-action="Register">Don't have an account?  Sign up</></a>
    </form>
</div>
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
